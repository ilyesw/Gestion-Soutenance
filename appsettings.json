{
  // ============================================
  // FICHIER : appsettings.json
  // DESCRIPTION : Configuration de l'application
  // ============================================

  // Configuration de la journalisation (logs)
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Hôtes autorisés (* = tous les hôtes)
  "AllowedHosts": "*",

  // ============================================
  // CHAÎNES DE CONNEXION À LA BASE DE DONNÉES
  // ============================================
  // LocalDB est une version légère de SQL Server pour le développement
  // Elle est installée automatiquement avec Visual Studio
  "ConnectionStrings": {
    "SoutenanceConnection": "Server=(localdb)\\mssqllocaldb;Database=GestSoutenanceDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}
