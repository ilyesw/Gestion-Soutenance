@* ============================================
    FICHIER : Views/Societe/Index.cshtml
    DESCRIPTION : Liste de toutes les sociétés
    ============================================ *@

@model IEnumerable<GestSoutenance.Models.Societe>

@{
    ViewData["Title"] = "Liste des Sociétés";
}

<h1>Liste des Sociétés</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Ajouter une Société
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Téléphone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var societe in Model)
        {
            <tr>
                <td>@societe.ID</td>
                <td>@societe.Lib</td>
                <td>@societe.Adresse</td>
                <td>@societe.Tel</td>
                <td>
                    <a asp-action="Details" asp-route-id="@societe.ID" class="btn btn-info btn-sm">Détails</a>
                    <a asp-action="Edit" asp-route-id="@societe.ID" class="btn btn-warning btn-sm">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@societe.ID" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Aucune société trouvée. Cliquez sur "Ajouter une Société" pour en créer une.
    </div>
}
