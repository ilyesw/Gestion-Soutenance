@* ============================================
    FICHIER : Views/PFE_Etudiant/Details.cshtml
    DESCRIPTION : Affiche les détails d'une affectation
    ============================================ *@

@model GestSoutenance.Models.PFE_Etudiant

@{
    ViewData["Title"] = "Détails Affectation";
}

<h1>Détails de l'Affectation</h1>

<hr />

<div class="card" style="width: 30rem;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">ID :</dt>
            <dd class="col-sm-8">@Model.ID</dd>

            <dt class="col-sm-4">PFE :</dt>
            <dd class="col-sm-8">@(Model.PFE != null ? Model.PFE.Titre : "N/A")</dd>

            <dt class="col-sm-4">Étudiant :</dt>
            <dd class="col-sm-8">@(Model.Etudiant != null ? Model.Etudiant.NomComplet : "N/A")</dd>
        </dl>
    </div>
</div>

<br />

<a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Modifier</a>
<a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
