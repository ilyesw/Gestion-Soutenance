@* ============================================
    FICHIER : Views/PFE/Create.cshtml
    DESCRIPTION : Formulaire pour créer un nouveau PFE
    ============================================ *@

@model GestSoutenance.Models.PFE

@{
    ViewData["Title"] = "Nouveau PFE";
}

<h1>Ajouter un PFE</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            @* Champ Titre *@
            <div class="mb-3">
                <label asp-for="Titre" class="form-label"></label>
                <input asp-for="Titre" class="form-control" placeholder="Titre du projet" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>

            @* Champ Description (zone multiligne) *@
            <div class="mb-3">
                <label asp-for="Desc" class="form-label"></label>
                <textarea asp-for="Desc" class="form-control" rows="4" placeholder="Description du projet"></textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>

            <div class="row">
                @* Champ Date de Début *@
                <div class="col-md-6 mb-3">
                    <label asp-for="DateD" class="form-label"></label>
                    <input asp-for="DateD" type="date" class="form-control" />
                    <span asp-validation-for="DateD" class="text-danger"></span>
                </div>

                @* Champ Date de Fin *@
                <div class="col-md-6 mb-3">
                    <label asp-for="DateF" class="form-label"></label>
                    <input asp-for="DateF" type="date" class="form-control" />
                    <span asp-validation-for="DateF" class="text-danger"></span>
                </div>
            </div>

            @* Liste déroulante pour l'Encadrant *@
            <div class="mb-3">
                <label asp-for="EncadrantID" class="form-label"></label>
                @* asp-items récupère la liste depuis ViewBag.EncadrantID *@
                <select asp-for="EncadrantID" asp-items="ViewBag.EncadrantID" class="form-select">
                    <option value="">-- Choisir un Encadrant --</option>
                </select>
                <span asp-validation-for="EncadrantID" class="text-danger"></span>
            </div>

            @* Liste déroulante pour la Société *@
            <div class="mb-3">
                <label asp-for="SocieteID" class="form-label"></label>
                <select asp-for="SocieteID" asp-items="ViewBag.SocieteID" class="form-select">
                    <option value="">-- Choisir une Société --</option>
                </select>
                <span asp-validation-for="SocieteID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Enregistrer</button>
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
