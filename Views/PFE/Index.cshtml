@* ============================================
    FICHIER : Views/PFE/Index.cshtml
    DESCRIPTION : Liste de tous les PFE
    ============================================ *@

@model IEnumerable<GestSoutenance.Models.PFE>

@{
    ViewData["Title"] = "Liste des PFE";
}

<h1>Liste des Projets de Fin d'Études</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Ajouter un PFE
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Date Début</th>
            <th>Date Fin</th>
            <th>Encadrant</th>
            <th>Société</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pfe in Model)
        {
            <tr>
                <td>@pfe.PFEID</td>
                <td>@pfe.Titre</td>
                <td>@pfe.DateD.ToString("dd/MM/yyyy")</td>
                <td>@pfe.DateF.ToString("dd/MM/yyyy")</td>
                @* Afficher le nom de l'encadrant (relation) *@
                <td>@(pfe.Encadrant != null ? pfe.Encadrant.NomComplet : "Non assigné")</td>
                @* Afficher le nom de la société (relation) *@
                <td>@(pfe.Societe != null ? pfe.Societe.Lib : "Non assignée")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@pfe.PFEID" class="btn btn-info btn-sm">Détails</a>
                    <a asp-action="Edit" asp-route-id="@pfe.PFEID" class="btn btn-warning btn-sm">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@pfe.PFEID" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Aucun PFE trouvé. Cliquez sur "Ajouter un PFE" pour en créer un.
    </div>
}
