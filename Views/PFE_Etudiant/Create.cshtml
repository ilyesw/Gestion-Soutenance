@* ============================================
    FICHIER : Views/PFE_Etudiant/Create.cshtml
    DESCRIPTION : Formulaire pour affecter un étudiant à un PFE
    ============================================ *@

@model GestSoutenance.Models.PFE_Etudiant

@{
    ViewData["Title"] = "Nouvelle Affectation";
}

<h1>Affecter un Étudiant à un PFE</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>

            @* Liste déroulante pour choisir le PFE *@
            <div class="mb-3">
                <label asp-for="PFEID" class="form-label"></label>
                <select asp-for="PFEID" asp-items="ViewBag.PFEID" class="form-select">
                    <option value="">-- Choisir un PFE --</option>
                </select>
                <span asp-validation-for="PFEID" class="text-danger"></span>
            </div>

            @* Liste déroulante pour choisir l'Étudiant *@
            <div class="mb-3">
                <label asp-for="EtudiantId" class="form-label"></label>
                <select asp-for="EtudiantId" asp-items="ViewBag.EtudiantId" class="form-select">
                    <option value="">-- Choisir un Étudiant --</option>
                </select>
                <span asp-validation-for="EtudiantId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Enregistrer</button>
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
