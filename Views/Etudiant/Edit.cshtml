@* ============================================
    FICHIER : Views/Etudiant/Edit.cshtml
    DESCRIPTION : Formulaire pour modifier un étudiant
    ============================================ *@

@model GestSoutenance.Models.Etudiant

@{
    ViewData["Title"] = "Modifier Étudiant";
}

<h1>Modifier l'Étudiant</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            @* Champ caché pour l'ID (ne doit pas être modifié) *@
            <input type="hidden" asp-for="ID" />

            <div asp-validation-summary="All" class="text-danger"></div>

            @* Champ Nom *@
            <div class="mb-3">
                <label asp-for="Nom" class="form-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            @* Champ Prénom *@
            <div class="mb-3">
                <label asp-for="Prenom" class="form-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>

            @* Champ Date de Naissance *@
            <div class="mb-3">
                <label asp-for="DateNaiss" class="form-label"></label>
                <input asp-for="DateNaiss" type="date" class="form-control" />
                <span asp-validation-for="DateNaiss" class="text-danger"></span>
            </div>

            @* Boutons *@
            <div class="mb-3">
                <button type="submit" class="btn btn-success">
                    Enregistrer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Annuler
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
